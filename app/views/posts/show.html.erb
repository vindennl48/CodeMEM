<div class=" container ">
  <div>
    <p id="notice"><%= notice %></p>
  </div>

  <h1><%= @post.name %></h1>

  <br></br>

  <div class=" post_categories border_bottom ">
    <div><%= @post.category1 %></div>
    <div><%= @post.category2 %></div>
    <div><%= @post.category3 %></div>
  </div>

  <div class=" post_body "><%= @post.body %></div>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
