      <%= form.label :category3 %>
      <%#= form.text_field :category3 %>
      <%= form.select :category3, Post.all.collect {|c| [c.category3, c.id]}, { include_blank: true } %>
    </div>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :body %>
